<!DOCTYPE html>
     <html lang="en">
     <head>
       <meta charset="UTF-8">
       <meta name="viewport" content="width=device-width, initial-scale=1.0">
       <title><%= title %></title>
       <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
       <link rel="stylesheet" href="/css/styles.css">
     </head>
     <body>
       <header>
         <h1><%= title %></h1>
       </header>
       <nav>
         <a href="/">Home</a> |
         <a href="/bracket">Bracket</a> |
         <a href="/rankings">Rankings</a> |
         <a href="/login">Login</a> |
         <a href="/signup">Sign Up</a>
       </nav>
       <main class="container">
         <% if (message || !match) { %>
           <p class="message"><%= message || 'Match not found' %></p>
         <% } else { %>
           <h2><%= match.team1_id.country %> vs <%= match.team2_id.country %></h2>
           <% if (match.score) { %>
             <p class="score"><%= match.score.team1 %> - <%= match.score.team2 %></p>
           <% } else { %>
             <p class="message">Match not yet played</p>
           <% } %>
           <% if (match.goal_scorers && match.goal_scorers.length > 0) { %>
             <h3>Goal Scorers</h3>
             <ul>
               <% match.goal_scorers.forEach(goal => { %>
                 <li><%= goal.player_name %> (<%= goal.team === 'team1' ? match.team1_id.country : match.team2_id.country %>) - <%= goal.minute %>'</li>
               <% }); %>
             </ul>
           <% } %>
           <% if (match.commentary) { %>
             <h3>Commentary</h3>
             <p><%= match.commentary %></p>
           <% } %>
         <% } %>
       </main>
     </body>
     </html>