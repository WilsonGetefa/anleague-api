<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <h1>Tournament Bracket</h1>
  </header>
  <nav>
    <a href="/">Home</a> |
    <a href="/bracket">Bracket</a> |
    <a href="/rankings">Rankings</a> |
    <a href="/login">Login</a> |
    <a href="/signup">Sign Up</a>
  </nav>
  <main class="container">
    <% if (message) { %>
      <p><%= message %></p>
    <% } else if (tournament) { %>
      <h2>Quarterfinals</h2>
      <ul>
        <% tournament.bracket.quarterfinals.forEach(match => { %>
          <li>
            <a href="/match/<%= match.match_id._id %>">
              <%= match.match_id.team1_id.country %> vs <%= match.match_id.team2_id.country %>
              <% if (match.match_id.score) { %>
                (<%= match.match_id.score.team1 %> - <%= match.match_id.score.team2 %>)
              <% } %>
            </a>
          </li>
        <% }) %>
      </ul>
      <% if (tournament.bracket.semifinals && tournament.bracket.semifinals.length > 0) { %>
        <h2>Semifinals</h2>
        <ul>
          <% tournament.bracket.semifinals.forEach(match => { %>
            <li>
              <a href="/match/<%= match.match_id._id %>">
                <%= match.match_id.team1_id.country %> vs <%= match.match_id.team2_id.country %>
                <% if (match.match_id.score) { %>
                  (<%= match.match_id.score.team1 %> - <%= match.match_id.score.team2 %>)
                <% } %>
              </a>
            </li>
          <% }) %>
        </ul>
      <% } %>
      <% if (tournament.bracket.final && tournament.bracket.final.length > 0) { %>
        <h2>Final</h2>
        <ul>
          <% tournament.bracket.final.forEach(match => { %>
            <li>
              <a href="/match/<%= match.match_id._id %>">
                <%= match.match_id.team1_id.country %> vs <%= match.match_id.team2_id.country %>
                <% if (match.match_id.score) { %>
                  (<%= match.match_id.score.team1 %> - <%= match.match_id.score.team2 %>)
                <% } %>
              </a>
            </li>
          <% }) %>
        </ul>
      <% } %>
    <% } %>
  </main>
</body>
</html>