<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="icon" type="image/x-icon" href="/images/caf.png">
  <style>
    a.error { color: #dc3545; margin-top: 10px; }
    @media (max-width: 600px) {
      nav a { display: block; margin-bottom: 5px; }
      li { font-size: 1em; }
    }
  </style>
</head>
<body>
  <header>
    <h1>Tournament Bracket</h1>
  </header>
  <nav>
    <a href="/">Home</a> |
    <a href="/teams">Teams</a> |
    <a href="/bracket">Bracket</a> |
    <a href="/rankings">Rankings</a> |
    <% if (user) { %>
      <% if (user.role === 'admin') { %>
        <a href="/admin/dashboard">Admin Dashboard</a> |
      <% } else { %>
        <a href="/dashboard">Dashboard</a> |
      <% } %>
      <a href="/auth/logout">Logout</a>
    <% } else { %>
      <a href="/login">Login</a> |
      <a href="/signup">Sign Up</a>
    <% } %>
  </nav>
  <main class="container">
    <% if (message) { %>
      <p class="message"><%= message %></p>
    <% } else if (error) { %>
      <p class="error"><%= error %></p>
    <% } else if (tournament) { %>
      <h2>Quarterfinals</h2>
      <ul>
        <% (tournament.bracket.quarterfinals || []).forEach(match => { %>
          <% if (match.match_id && match.match_id._id) { %>
            <li>
              <a href="/match/<%= match.match_id._id %>">
                <%= match.match_id.team1_id && match.match_id.team1_id.country ? match.match_id.team1_id.country : 'TBD' %> vs
                <%= match.match_id.team2_id && match.match_id.team2_id.country ? match.match_id.team2_id.country : 'TBD' %>
                <% if (match.match_id.score && match.match_id.score.team1 != null && match.match_id.score.team2 != null) { %>
                  (<%= match.match_id.score.team1 %> - <%= match.match_id.score.team2 %>)
                <% } %>
              </a>
            </li>
          <% } %>
        <% }) %>
      </ul>
      <h2>Semifinals</h2>
      <ul>
        <% (tournament.bracket.semifinals || []).forEach(match => { %>
          <% if (match.match_id && match.match_id._id) { %>
            <li>
              <a href="/match/<%= match.match_id._id %>">
                <%= match.match_id.team1_id && match.match_id.team1_id.country ? match.match_id.team1_id.country : 'TBD' %> vs
                <%= match.match_id.team2_id && match.match_id.team2_id.country ? match.match_id.team2_id.country : 'TBD' %>
                <% if (match.match_id.score && match.match_id.score.team1 != null && match.match_id.score.team2 != null) { %>
                  (<%= match.match_id.score.team1 %> - <%= match.match_id.score.team2 %>)
                <% } %>
              </a>
            </li>
          <% } %>
        <% }) %>
      </ul>
      <h2>Final</h2>
      <ul>
        <% (tournament.bracket.final || []).forEach(match => { %>
          <% if (match.match_id && match.match_id._id) { %>
            <li>
              <a href="/match/<%= match.match_id._id %>">
                <%= match.match_id.team1_id && match.match_id.team1_id.country ? match.match_id.team1_id.country : 'TBD' %> vs
                <%= match.match_id.team2_id && match.match_id.team2_id.country ? match.match_id.team2_id.country : 'TBD' %>
                <% if (match.match_id.score && match.match_id.score.team1 != null && match.match_id.score.team2 != null) { %>
                  (<%= match.match_id.score.team1 %> - <%= match.match_id.score.team2 %>)
                <% } %>
              </a>
            </li>
          <% } %>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No tournament data available</p>
    <% } %>
  </main>
</body>
</html>