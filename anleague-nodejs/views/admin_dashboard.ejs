<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="icon" type="image/x-icon" href="images/caf.png">
  <style>
    .commentary {
      font-style: italic;
      color: #555;
      margin: 4px 0 12px 20px;
      font-size: 0.9em;
    }
    .winner {
      font-weight: bold;
      color: #d4af37;
      margin-top: 8px;
    }
  </style>
</head>
<body>
  <header>
    <h1><%= title %></h1>
  </header>
  <nav>
    <a href="/">Home</a> |
    <a href="/bracket">Bracket</a> |
    <a href="/rankings">Rankings</a> |
    <a href="/teams">Teams</a> |
    <% if (typeof user !== 'undefined' && user) { %>
      <% if (user.role === 'admin') { %>
        <a href="/admin/dashboard">Admin Dashboard</a> |
      <% } else { %>
        <a href="/dashboard">Dashboard</a> |
      <% } %>
      <a href="/auth/logout">Logout</a>
    <% } else { %>
      <a href="/login">Login</a> |
      <a href="/signup">Sign Up</a>
    <% } %>
  </nav>

  <main class="container">
    <% if (message) { %>
      <p class="message"><%= message %></p>
    <% } %>
    <% if (error) { %>
      <p class="error"><%= error %></p>
    <% } %>

    <% if (tournament) { %>
      <p><strong>Current Tournament Status:</strong> <%= tournament.status %></p>
      <section class="tournament-panel">

        <!-- Quarterfinals -->
        <h2>Quarterfinals</h2>
        <% if (tournament.bracket.quarterfinals && tournament.bracket.quarterfinals.length > 0) { %>
          <% tournament.bracket.quarterfinals.forEach(qf => { %>
            <div class="match-block">
              <p>
                <strong>
                  <%= qf.team1_id ? (qf.team1_id.country || 'Unknown') : 'Unknown' %> 
                  vs 
                  <%= qf.team2_id ? (qf.team2_id.country || 'Unknown') : 'Unknown' %>
                </strong> - 
                <%= qf.match_id 
                  ? `${qf.match_id.score.team1 || 0}-${qf.match_id.score.team2 || 0} (${qf.match_id.status || 'Pending'})`
                  : 'Pending' 
                %>
              </p>

              <!-- Commentary -->
              <% if (qf.match_id?.commentary) { %>
                <p class="commentary"><%= qf.match_id.commentary %></p>
              <% } %>

              <!-- Update Score Form (Pending Matches) -->
              <% if (user && user.role === 'admin' && qf.match_id && qf.match_id.status === 'pending') { %>
                <form action="/admin/edit-match" method="post" class="update-score-form">
                  <input type="hidden" name="matchId" value="<%= qf.match_id._id %>">
                  <input type="number" min="0" name="team1Score" placeholder="Team 1 Score" required style="width:60px;">
                  <input type="number" min="0" name="team2Score" placeholder="Team 2 Score" required style="width:60px;">
                  <button type="submit">Update</button>
                </form>
              <% } %>
            </div>
          <% }); %>
        <% } else { %>
          <p>No quarterfinals scheduled.</p>
        <% } %>

        <!-- Semifinals -->
        <h2>Semifinals</h2>
        <% if (tournament.bracket.semifinals && tournament.bracket.semifinals.length > 0) { %>
          <% tournament.bracket.semifinals.forEach(sf => { %>
            <div class="match-block">
              <p>
                <strong>
                  <%= sf.team1_id ? (sf.team1_id.country || 'Unknown') : 'Unknown' %> 
                  vs 
                  <%= sf.team2_id ? (sf.team2_id.country || 'Unknown') : 'Unknown' %>
                </strong> - 
                <%= sf.match_id 
                  ? `${sf.match_id.score.team1 || 0}-${sf.match_id.score.team2 || 0} (${sf.match_id.status || 'Pending'})`
                  : 'Pending' 
                %>
              </p>

              <!-- Commentary -->
              <% if (sf.match_id?.commentary) { %>
                <p class="commentary"><%= sf.match_id.commentary %></p>
              <% } %>
            </div>
          <% }); %>
        <% } else { %>
          <p>No semifinals scheduled.</p>
        <% } %>

        <!-- Final -->
        <h2>Final</h2>
        <% if (tournament.bracket.final && tournament.bracket.final.length > 0) { %>
          <% tournament.bracket.final.forEach(f => { %>
            <div class="match-block">
              <p>
                <strong>
                  <%= f.team1_id ? (f.team1_id.country || 'Unknown') : 'Unknown' %> 
                  vs 
                  <%= f.team2_id ? (f.team2_id.country || 'Unknown') : 'Unknown' %>
                </strong> - 
                <%= f.match_id 
                  ? `${f.match_id.score.team1 || 0}-${f.match_id.score.team2 || 0} (${f.match_id.status || 'Pending'})`
                  : 'Pending' 
                %>
              </p>

              <!-- Commentary -->
              <% if (f.match_id?.commentary) { %>
                <p class="commentary"><%= f.match_id.commentary %></p>
              <% } %>

              <!-- Winner Announcement -->
              <% if (f.match_id && f.match_id.status === 'completed') { %>
                <p class="winner">
                  Winner: 
                  <%= f.match_id.score.team1 > f.match_id.score.team2 
                    ? (f.team1_id ? f.team1_id.country || 'Unknown' : 'Unknown')
                    : (f.team2_id ? f.team2_id.country || 'Unknown' : 'Unknown') 
                  %>
                </p>
              <% } %>
            </div>
          <% }); %>
        <% } else { %>
          <p>No final scheduled.</p>
        <% } %>

      </section>

      <!-- Admin Controls -->
      <% if (user && user.role === 'admin') { %>
        <div class="admin-controls" style="margin-top: 30px;">
          <form action="/admin/simulate" method="post" style="display:inline;">
            <button type="submit">Simulate Matches</button>
          </form>
          <form action="/admin/advance" method="post" style="display:inline; margin-left:10px;">
            <button type="submit">Advance Stage</button>
          </form>
          <form action="/admin/restart" method="post" style="display:inline; margin-left:10px;">
            <button type="submit" onclick="return confirm('This will archive the current tournament and clear active data. Continue?');">
              Restart Tournament
            </button>
          </form>
        </div>
      <% } %>

    <% } else { %>
      <div style="text-align:center; margin:40px 0;"></div>
        <p>No active tournament.</p>
        <% if (user && user.role === 'admin') { %>
          <form action="/admin/start" method="post" style="display:inline; margin-top:10px;">
            <button type="submit">Start New Tournament</button>
          </form>
        <% } else { %>
            <p>Log in as admin to start a tournament.</p>
        <% } %>
      </div>
    <% } %>
  </main>
</body>
</html>