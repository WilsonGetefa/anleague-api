<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="icon" type="image/x-icon" href="images/caf.png">
</head>
<body>
  <header>
    <h1><%= title %></h1>
  </header>
  <nav>
    <a href="/">Home</a> |
    <a href="/bracket">Bracket</a> |
    <a href="/rankings">Rankings</a> |
    <a href="/teams">Teams</a> |
    <% if (typeof user !== 'undefined' && user) { %> <!-- Safely check user -->
      <% if (user.role === 'admin') { %>
        <a href="/admin/dashboard">Admin Dashboard</a> |
      <% } else { %>
        <a href="/dashboard">Dashboard</a> |
      <% } %>
      <a href="/auth/logout">Logout</a>
    <% } else { %>
      <a href="/login">Login</a> |
      <a href="/signup">Sign Up</a>
    <% } %>
  </nav>
  <main class="container">
    <section class="admin-panel form-box">
      <h2>Welcome, <%= username %>!</h2>
      <p>Role: <strong><%= typeof role !== 'undefined' ? role : 'N/A' %></strong></p>
      <% if (message) { %>
        <p class="message"><%= message %></p>
      <% } %>
      <% if (error) { %>
        <p class="error"><%= error %></p>
      <% } %>
      <% if (tournament) { %>
        <h3>Current Tournament Status: <%= tournament.status %></h3>
        <form action="/admin/start" method="post">
          <button type="submit">Start New Tournament</button>
        </form>
        <form action="/admin/simulate" method="post">
          <button type="submit">Simulate Matches</button>
        </form>
        <form action="/admin/play" method="post">
          <button type="submit">Play Matches</button>
        </form>
        <form action="/admin/advance" method="post">
          <button type="submit">Advance Stage</button>
        </form>
        <form action="/admin/restart" method="post">
          <button type="submit">Restart Tournament</button>
        </form>
        <% if (tournament.bracket.quarterfinals.length > 0) { %>
          <h4>Quarterfinals</h4>
          <% tournament.bracket.quarterfinals.forEach(qf => { %>
            <p><%= qf.team1_id.country %> vs <%= qf.team2_id.country %> - <%= qf.match_id ? `${qf.match_id.score.team1}-${qf.match_id.score.team2} (${qf.match_id.status})` : 'Pending' %></p>
            <% if (qf.match_id && qf.match_id.status === 'pending') { %>
              <form action="/admin/edit-match" method="post">
                <input type="hidden" name="matchId" value="<%= qf.match_id._id %>">
                <input type="number" name="team1Score" placeholder="Team 1 Score" required>
                <input type="number" name="team2Score" placeholder="Team 2 Score" required>
                <button type="submit">Update Score</button>
              </form>
            <% } %>
          <% }); %>
        <% } %>
        <% if (tournament.bracket.semifinals.length > 0) { %>
          <h4>Semifinals</h4>
          <% tournament.bracket.semifinals.forEach(sf => { %>
            <p>
              <%= sf.team1_id ? sf.team1_id.country || 'Unknown' : 'Unknown' %> vs
              <%= sf.team2_id ? sf.team2_id.country || 'Unknown' : 'Unknown' %> -
              <%= sf.match_id ? `${sf.match_id.score.team1}-${sf.match_id.score.team2} (${sf.match_id.status})` : 'Pending' %>
            </p>
          <% }); %>
        <% } %>
        <% if (tournament.bracket.final.length > 0) { %>
          <h4>Final</h4>
          <% tournament.bracket.final.forEach(f => { %>
            <p><%= f.team1_id.country %> vs <%= f.team2_id.country %> - <%= f.match_id ? `${f.match_id.score.team1}-${f.match_id.score.team2} (${f.match_id.status})` : 'Pending' %></p>
          <% }); %>
        <% } %>
      <% } else { %>
        <p>No active tournament. Start one to begin.</p>
      <% } %>
    </section>
  </main>
</body>
</html>