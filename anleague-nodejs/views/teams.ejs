<!-- FILE: views/teams.ejs -->
<%- include('partials/head') %>
<section class="teams-page">
  <div class="page-header">
    <h2>Registered Teams</h2>
    <p class="muted">Browse federations, managers and full 23-player squads.</p>
  </div>

  <div class="teams-grid">
    <% if (!teams || teams.length === 0) { %>
      <div class="card form-box">No teams have registered yet.</div>
    <% } else { %>
      <% teams.forEach(team => { %>
        <article class="team-card">
          <div class="team-top">
            <div class="team-info">
              <h3 class="team-name"><%= team.name || team.country || 'Unnamed' %></h3>
              <div class="team-meta">Manager: <strong><%= team.manager || 'N/A' %></strong></div>
              <div class="team-meta">Representative: <strong><%= (team.representative && team.representative.name) || (team.user && team.user.username) || 'N/A' %></strong></div>
            </div>
            <div class="team-rating">Rating <span class="rating-value"><%= (team.teamRating || team.rating || 0).toFixed ? (team.teamRating || team.rating).toFixed(2) : team.teamRating || team.rating %></span></div>
          </div>

          <div class="squad">
            <div class="squad-column">
              <h5>Goalkeepers</h5>
              <ul>
                <% team.squad.filter(p => p.naturalPos === 'GK' || p.natural_position === 'GK').forEach(p => { %>
                  <li>
                    <strong><%= p.name %></strong>
                    <% if (p.isCaptain || p.is_captain) { %> <span class="badge">Captain</span> <% } %>
                    <div class="player-stats">GK: <%= p.ratings?.GK ?? p.ratings?.gk ?? p.ratings?.gK ?? 0 %></div>
                  </li>
                <% }) %>
              </ul>
            </div>

            <div class="squad-column">
              <h5>Defenders</h5>
              <ul>
                <% team.squad.filter(p => p.naturalPos === 'DF' || p.natural_position === 'DF').forEach(p => { %>
                  <li>
                    <strong><%= p.name %></strong>
                    <% if (p.isCaptain || p.is_captain) { %> <span class="badge">Captain</span> <% } %>
                    <div class="player-stats">DF: <%= p.ratings?.DF ?? p.ratings?.df ?? 0 %></div>
                  </li>
                <% }) %>
              </ul>
            </div>

            <div class="squad-column">
              <h5>Midfielders</h5>
              <ul>
                <% team.squad.filter(p => p.naturalPos === 'MD' || p.natural_position === 'MD').forEach(p => { %>
                  <li>
                    <strong><%= p.name %></strong>
                    <% if (p.isCaptain || p.is_captain) { %> <span class="badge">Captain</span> <% } %>
                    <div class="player-stats">MD: <%= p.ratings?.MD ?? p.ratings?.md ?? 0 %></div>
                  </li>
                <% }) %>
              </ul>
            </div>

            <div class="squad-column">
              <h5>Attackers</h5>
              <ul>
                <% team.squad.filter(p => p.naturalPos === 'AT' || p.natural_position === 'AT').forEach(p => { %>
                  <li>
                    <strong><%= p.name %></strong>
                    <% if (p.isCaptain || p.is_captain) { %> <span class="badge">Captain</span> <% } %>
                    <div class="player-stats">AT: <%= p.ratings?.AT ?? p.ratings?.at ?? 0 %></div>
                  </li>
                <% }) %>
              </ul>
            </div>
          </div>

          <div class="team-actions">
            <a href="/teams/<%= team._id %>" class="btn btn-outline">View Team</a>
            <% if (user && (user.role === 'admin' || user.federationId === team.federationId)) { %>
              <a href="/teams/<%= team._id %>/edit" class="btn">Edit</a>
            <% } %>
          </div>
        </article>
      <% }) %>
    <% } %>
  </div>
</section>
<%- include('partials/footer') %>


