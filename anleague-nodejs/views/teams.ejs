<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="icon" type="image/x-icon" href="images/caf.png">
  <style>
    table { width: 100%; border-collapse: collapse; }
    th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
    th { background-color: #f2f2f2; }
  </style>
</head>
<body>
  <header>
    <h1>Teams</h1>
  </header>
  <nav>
    <a href="/">Home</a> |
    <a href="/bracket">Bracket</a> |
    <a href="/rankings">Rankings</a> |
    <% if (user) { %>
      <% if (user.role === 'admin') { %>
        <a href="/admin/dashboard">Admin Dashboard</a> |
      <% } else { %>
        <a href="/dashboard">Dashboard</a> |
      <% } %>
      <a href="/logout">Logout</a>
    <% } else { %>
      <a href="/login">Login</a>
    <% } %>
  </nav>
  <main class="container">
    <h2>All Teams</h2>
    <% if (teams.length === 0) { %>
      <p>No teams available.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Country</th>
            <th>Manager</th>
            <th>User</th>
            <th>Rating</th>
            <th>Squad</th>
          </tr>
        </thead>
        <tbody>
          <% teams.forEach(team => { %>
            <tr>
              <td><%= team.country %></td>
              <td><%= team.manager || 'N/A' %></td>
              <td><%= team.userId ? team.userId.username : 'N/A' %></td>
              <td><%= team.rating.toFixed(2) %></td>
              <td>
                <ul>
                  <% team.squad.forEach(player => { %>
                    <li>
                      <%= player.name %> (<%= player.natural_position %>)
                      <% if (player.is_captain) { %>[Captain]<% } %>
                      - Ratings: GK: <%= player.ratings.GK %>, DF: <%= player.ratings.DF %>, MD: <%= player.ratings.MD %>, AT: <%= player.ratings.AT %>
                      - Goals: <%= player.goals %>
                    </li>
                  <% }) %>
                </ul>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </main>
</body>
</html>